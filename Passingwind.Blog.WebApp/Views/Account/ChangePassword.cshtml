@model ChangePasswordViewModel
@{
    Layout = "_Layout.Account";

    ViewData["Title"] = localizer["Change Password"];
}
@inject IViewLocalizer localizer


<div class="login-box">

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <form asp-route-returnurl="@ViewData["ReturnUrl"]">

        <div class="login-box-body">

            <p class="login-box-msg">Change you password </p>

            <div class="form-group has-feedback">
                <input class="form-control" asp-for="OldPassword" placeholder="Type old password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input class="form-control" asp-for="NewPassword" placeholder="Type new Password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Retype new password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block btn-flat">@localizer["Submit"]</button>
            </div>

            <hr />

            <a asp-action="login" class="text-center">@localizer["Return to login"]</a>

        </div>

    </form>

</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
